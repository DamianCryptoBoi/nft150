{
  "name": "sota-work-contracts",
  "version": "1.0.0",
  "description": "sota nft platform",
  "main": "truffle-config.js",
  "directories": {
    "test": "test"
  },
  "scripts": {
    "prettier:contracts": "npx prettier --write 'contracts/**/*.sol'",
    "lint:contracts": "npx solhint 'contracts/**/*.sol'",
    "truffle:compile": "npx truffle compile",
    "truffle:migrate": "npx truffle migrate",
    "build": "npm run prettier:contracts && npm run lint:contracts && npm run truffle:compile",
    "test": "npx truffle test"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sotanext-team/sota-work-contracts.git"
  },
  "keywords": [
    "ERC1155",
    "NFT",
    "Ethereum",
    "Defi",
    "Decentralized",
    "Finance"
  ],
  "author": "SotaNext-team",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/sotanext-team/sota-work-contracts/issues"
  },
  "homepage": "https://github.com/sotanext-team/sota-work-contracts#readme",
  "dependencies": {
    "@openzeppelin/contracts": "^4.2.0",
    "@truffle/hdwallet-provider": "^1.0.37",
    "csv-parser": "^3.0.0",
    "dotenv": "^8.6.0",
    "ethereumjs-util": "^7.0.10",
    "line-reader": "^0.4.0",
    "openzeppelin-test-helpers": "^0.5.1",
    "run": "^1.4.0",
    "truffle": "^5.1.67",
    "truffle-contract-size": "^2.0.1",
    "verify": "^0.1.2",
    "web3": "^1.3.5"
  },
  "devDependencies": {
    "@nomiclabs/hardhat-ethers": "^2.0.2",
    "@nomiclabs/hardhat-etherscan": "^2.1.2",
    "@nomiclabs/hardhat-waffle": "^2.0.1",
    "@openzeppelin/test-helpers": "^0.5.12",
    "chai": "^4.3.4",
    "eth-json-rpc-filters": "^4.2.2",
    "ethereum-waffle": "^3.4.0",
    "ethers": "^5.4.3",
    "hardhat": "^2.6.7",
    "hardhat-abi-exporter": "^2.2.1",
    "hardhat-etherscan-abi": "^0.1.1",
    "mocha": "^9.0.3",
    "prettier": "^2.2.1",
    "prettier-plugin-solidity": "^1.0.0-beta.7",
    "sol-merger": "2.0.1",
